<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/schedule_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MARCH"
                        android:textColor="#fff"
                        android:background="@color/schedule"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="24sp"/>
                </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/schedule_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:tabMode="fixed"
                    app:tabBackground="@drawable/tab_background"
                    app:tabGravity="fill"
                    app:tabTextColor="#fff"
                    app:tabSelectedTextColor="#ffffff"
                    app:tabIndicatorColor="#f9e110">
                </android.support.design.widget.TabLayout>



            </android.support.design.widget.AppBarLayout>

            <com.example.login.ojassloginsignup.Widgets.CustomViewPager
                android:id="@+id/schedule_view_pager"
                android:layout_below="@id/schedule_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </com.example.login.ojassloginsignup.Widgets.CustomViewPager>

        </RelativeLayout>
</RelativeLayout>
